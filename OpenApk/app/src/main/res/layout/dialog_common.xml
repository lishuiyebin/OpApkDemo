<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/common_dialog_root_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/common_dialog_title_tv"
            style="@style/CommonDialogTitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="30dp">


            <TextView
                android:id="@+id/common_dialog_msg_tv"
                style="@style/CommonDialogMsg"
                android:paddingBottom="0dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_dialog_btns_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_dialog_cancel_tv"
                style="@style/CommonDialogButton"
                android:text="取消"/>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#F2F2F2"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:src="#d2d2d2"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/common_dialog_confirm_tv"
                style="@style/CommonDialogButton"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>