<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/CommonDialogAnimationStyle</item>
    </style>

    <style name="CommonDialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">19dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CommonDialogMsg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="CommonDialogAnimationStyle" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_alpha_out</item>
    </style>

    <style name="CommonDialogButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_dialog_button</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">17dp</item>
    </style>

</resources>
